/*
 * EXAMPLE 2: Notification Control - Choose When to Notify
 *
 * Control which workflow events trigger Slack notifications.
 * All other settings remain at defaults.
 *
 * New features in this example:
 * - notifyOnStart: control start notifications
 * - notifyOnComplete: control completion notifications
 * - notifyOnError: control error notifications
 */

plugins {
    id 'nf-slack@0.1.0'
}

slack {
    webhook = System.getenv('SLACK_WEBHOOK_URL')

    // Control which events trigger notifications
    notifyOnStart = false      // Don't notify when workflow starts
    notifyOnComplete = true    // DO notify when workflow completes
    notifyOnError = true       // DO notify when workflow fails
}

// Use case: Reduce notification noise by only showing results and errors
